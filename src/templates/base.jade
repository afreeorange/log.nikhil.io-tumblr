doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width")
        meta(name="description", content="{MetaDescription}")

        link(rel="alternate", href="{RSS}", type="application/rss+xml")
        link(rel="apple-touch-icon", href="{PortraitURL-128}")
        link(rel="shortcut icon", href="{Favicon}")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css")
        link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Cardo:400,400italic,700|Lusitana:400,700")
        link(rel="stylesheet", href="log.nikhil.io.css")

        title {Title} {block:PostSummary} &ndash; {PostSummary}{/block:PostSummary}

    body
        #container
            header.brick#masthead
                h1
                    a(href="{BlogURL}") {Title}
                p {Description}
                ul
                    li: a(href="https://nikhil.io") About
                    li: a(href="/archive") Archive
                include _search

            |{block:Posts}

            include audio
            include link
            include photo
            include quote
            include text
            include video
    
            |{/block:Posts}

        include _pagination
        include _footer

        script(type="application/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
        script(type="application/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js")
        script(type="application/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.0/masonry.pkgd.min.js")
        script(type="application/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery-infinitescroll/2.0b2.120519/jquery.infinitescroll.min.js")
        script(type="application/javascript", src="log.nikhil.io.js")
